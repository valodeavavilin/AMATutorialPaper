<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evenimente la care participi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Încă nu ai evenimente la care participi.\nApasă pe buton pentru a vedea toate evenimentele."
        android:textAlignment="center"
        android:gravity="center"
        android:padding="24dp"
        android:textSize="16sp"
        android:textColor="#888888"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewParticipations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <Button
        android:id="@+id/seeAllEventsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vezi toate evenimentele"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white" />
</LinearLayout>
